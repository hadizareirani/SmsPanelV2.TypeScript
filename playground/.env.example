# Environment variables for playground
# Copy this file to .env and fill in your actual credentials

# Your SMS.ir API Key from https://sms.ir panel
SMSIR_API_KEY=your-api-key-here

# Your default line number (phone number)
SMSIR_LINE_NUMBER=30007732000000

# Test mobile number (your own number for testing)
SMSIR_TEST_MOBILE=09123456789

# Template ID for verify code testing (create a template in your SMS.ir panel)
SMSIR_TEMPLATE_ID=12345

# Pack ID
SMSIR_PACK_ID=123456

# UserName
SMSIR_USERNAME=your-username-here

# Message ID
SMSIR_MESSAGEID=123456789
